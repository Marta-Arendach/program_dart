import 'package:flutter/material.dart';

void main() {
  runApp(const HymnInterface());
}

class HymnInterface extends StatelessWidget {
  const HymnInterface({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        backgroundColor: Colors.white,
        body: Padding(
          padding: const EdgeInsets.all(20),
          child: CustomPaint(
            painter: HymnPainter(),
            child: const SizedBox.expand(),
          ),
        ),
      ),
    );
  }
}

class HymnPainter extends CustomPainter {
  // ĞŸĞ°Ñ€Ğ°Ğ¼ĞµÑ‚Ñ€Ğ¸ Ğ· Ğ²Ğ°Ñ€Ñ–Ğ°Ğ½Ñ‚Ñƒ
  final double a = 300; // = c = e
  final double b = 300;
  final double d = 200;
  final double g = 300, h = 300;
  final double f = 50;
  final double i = 200;
  final double m = 400;
  final double k = 150;
  final double n = 5, p = 5;
  final double r = 3, s = 3;

  @override
  void paint(Canvas canvas, Size size) {
    final paintYellow = Paint()..color = Colors.yellow.shade200;
    final paintBlue = Paint()..color = Colors.lightBlue.shade200;
    final paintWhite = Paint()..color = Colors.white;
    final border = Paint()
      ..color = Colors.black
      ..style = PaintingStyle.stroke
      ..strokeWidth = 1.5;

    // ğŸŸ¨ 1. Ğ–Ğ¾Ğ²Ñ‚Ğ¸Ğ¹ Ğ±Ğ»Ğ¾Ğº
    final rectYellow = Rect.fromLTWH(50, 50, g, d);
    canvas.drawRect(rectYellow, paintYellow);
    canvas.drawRect(rectYellow, border);

    // ğŸŸ¦ 2. Ğ¡Ğ¸Ğ½Ñ–Ğ¹ Ğ±Ğ»Ğ¾Ğº
    final rectBlue = Rect.fromLTWH(
        rectYellow.right + f, // Ğ²Ñ–Ğ´ÑÑ‚Ğ°Ğ½ÑŒ Ğ¼Ñ–Ğ¶ Ğ±Ğ»Ğ¾ĞºĞ°Ğ¼Ğ¸
        rectYellow.top,
        h,
        b);
    canvas.drawRect(rectBlue, paintBlue);
    canvas.drawRect(rectBlue, border);

    // â¬œï¸ 3. Ğ‘Ñ–Ğ»Ğ¸Ğ¹ Ğ±Ğ»Ğ¾Ğº
    final rectWhite = Rect.fromLTWH(
        rectYellow.left + 150, // Ñ‚Ñ€Ğ¾Ñ…Ğ¸ Ğ·ÑÑƒĞ½ĞµĞ¼Ğ¾ Ğ²Ğ½Ğ¸Ğ·
        rectYellow.bottom + f,
        i,
        d);
    canvas.drawRect(rectWhite, paintWhite);
    canvas.drawRect(rectWhite, border);

    // âœï¸ Ğ¡Ñ‚Ğ¸Ğ»ÑŒ ÑˆÑ€Ğ¸Ñ„Ñ‚Ñƒ (ĞºÑƒÑ€ÑĞ¸Ğ²)
    final textStyle = TextStyle(
      fontSize: 16,
      fontStyle: FontStyle.italic,
      color: Colors.black,
    );

    // ğŸŸ¨ Ğ¢ĞµĞºÑÑ‚ Ñƒ Ğ¶Ğ¾Ğ²Ñ‚Ğ¾Ğ¼Ñƒ Ğ±Ğ»Ğ¾Ñ†Ñ–
    final textYellow = TextPainter(
      text: TextSpan(
        text: 'Ğ©Ğµ Ğ½Ğµ Ğ²Ğ¼ĞµÑ€Ğ»Ğ° Ğ£ĞºÑ€Ğ°Ñ—Ğ½Ğ°, Ñ– ÑĞ»Ğ°Ğ²Ğ°, Ñ– Ğ²Ğ¾Ğ»Ñ,\nÑ‰Ğµ Ğ½Ğ°Ğ¼, Ğ±Ñ€Ğ°Ñ‚Ñ‚Ñ',
        style: textStyle,
      ),
      textAlign: TextAlign.center,
      textDirection: TextDirection.ltr,
    )..layout(maxWidth: g - 2 * n);
    textYellow.paint(canvas, Offset(rectYellow.left + n, rectYellow.top + n));

    // ğŸŸ¦ Ğ¢ĞµĞºÑÑ‚ Ñƒ ÑĞ¸Ğ½ÑŒĞ¾Ğ¼Ñƒ Ğ±Ğ»Ğ¾Ñ†Ñ–
    final textBlue = TextPainter(
      text: TextSpan(
        text:
            'Ğ—Ğ³Ğ¸Ğ½ÑƒÑ‚ÑŒ Ğ½Ğ°ÑˆÑ– Ğ²Ğ¾Ñ€Ğ¾Ğ¶ĞµĞ½ÑŒĞºĞ¸,\nÑĞº Ñ€Ğ¾ÑĞ° Ğ½Ğ° ÑĞ¾Ğ½Ñ†Ñ–,\nĞ·Ğ°Ğ¿Ğ°Ğ½ÑƒÑ”Ğ¼ Ñ– Ğ¼Ğ¸, Ğ±Ñ€Ğ°Ñ‚Ñ‚Ñ, Ñƒ ÑĞ²Ğ¾Ñ—Ğ¹ ÑÑ‚Ğ¾Ñ€Ğ¾Ğ½Ñ†Ñ–.',
        style: textStyle,
      ),
      textAlign: TextAlign.center,
      textDirection: TextDirection.ltr,
    )..layout(maxWidth: h - 2 * r);
    textBlue.paint(canvas, Offset(rectBlue.left + r, rectBlue.top + r));

    // â¬œï¸ Ğ¢ĞµĞºÑÑ‚ Ñƒ Ğ±Ñ–Ğ»Ğ¾Ğ¼Ñƒ Ğ±Ğ»Ğ¾Ñ†Ñ–
    final textWhite = TextPainter(
      text: TextSpan(
        text: 'Ğ† Ğ¿Ğ¾ĞºĞ°Ğ¶ĞµĞ¼, Ñ‰Ğ¾ Ğ¼Ğ¸, Ğ±Ñ€Ğ°Ñ‚Ñ‚Ñ, ĞºĞ¾Ğ·Ğ°Ñ†ÑŒĞºĞ¾Ğ³Ğ¾ Ñ€Ğ¾Ğ´Ñƒ.',
        style: textStyle,
      ),
      textAlign: TextAlign.center,
      textDirection: TextDirection.ltr,
    )..layout(maxWidth: i - 2 * p);
    textWhite.paint(canvas, Offset(rectWhite.left + p, rectWhite.top + p));
  }

  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) => false;
}
