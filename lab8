// =====================================================
// üìå –í–õ–ê–°–ù–ò–ô –í–Ü–î–ñ–ï–¢ –ó ‚â•3 –ü–ê–†–ê–ú–ï–¢–†–ê–ú–ò
// =====================================================

class HymnBlock extends StatelessWidget {
  final Color color;
  final String text;
  final double width;
  final double height;
  final double padding;
  final double borderRadius;

  const HymnBlock({
    super.key,
    required this.color,
    required this.text,
    required this.width,
    required this.height,
    this.padding = 12,
    this.borderRadius = 16,
  });

  @override
  Widget build(BuildContext context) {
    return Material(
      elevation: 3,
      borderRadius: BorderRadius.circular(borderRadius),
      child: Container(
        width: width,
        height: height,
        padding: EdgeInsets.all(padding),
        decoration: BoxDecoration(
          color: color,
          borderRadius: BorderRadius.circular(borderRadius),
          border: Border.all(color: Colors.black, width: 1.3),
        ),
        child: Center(
          child: Text(
            text,
            textAlign: TextAlign.center,
            style: const TextStyle(
              fontSize: 16,
              fontStyle: FontStyle.italic,
              color: Colors.black,
            ),
          ),
        ),
      ),
    );
  }
}
