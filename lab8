import 'package:flutter/material.dart';

void main() {
  runApp(const MaterialHymnInterface());
}

class MaterialHymnInterface extends StatelessWidget {
  const MaterialHymnInterface({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        backgroundColor: Colors.white,
        body: Padding(
          padding: const EdgeInsets.all(20),
          child: SingleChildScrollView(
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [

                // üü® –ñ–û–í–¢–ò–ô –ë–õ–û–ö
                HymnBlock(
                  color: Colors.yellow.shade200,
                  text:
                      '–©–µ –Ω–µ –≤–º–µ—Ä–ª–∞ –£–∫—Ä–∞—ó–Ω–∞, —ñ —Å–ª–∞–≤–∞, —ñ –≤–æ–ª—è,\n—â–µ –Ω–∞–º, –±—Ä–∞—Ç—Ç—è',
                  width: 300,
                  height: 200,
                ),

                const SizedBox(height: 20),

                // üü¶ –°–ò–ù–Ü–ô –ë–õ–û–ö
                HymnBlock(
                  color: Colors.lightBlue.shade200,
                  text:
                      '–ó–≥–∏–Ω—É—Ç—å –Ω–∞—à—ñ –≤–æ—Ä–æ–∂–µ–Ω—å–∫–∏,\n—è–∫ —Ä–æ—Å–∞ –Ω–∞ —Å–æ–Ω—Ü—ñ,\n–∑–∞–ø–∞–Ω—É—î–º —ñ –º–∏, –±—Ä–∞—Ç—Ç—è, —É —Å–≤–æ—ó–π —Å—Ç–æ—Ä–æ–Ω—Ü—ñ.',
                  width: 300,
                  height: 300,
                ),

                const SizedBox(height: 20),

                // ‚¨úÔ∏è –ë–Ü–õ–ò–ô –ë–õ–û–ö
                HymnBlock(
                  color: Colors.white,
                  text: '–Ü –ø–æ–∫–∞–∂–µ–º, —â–æ –º–∏, –±—Ä–∞—Ç—Ç—è, –∫–æ–∑–∞—Ü—å–∫–æ–≥–æ —Ä–æ–¥—É.',
