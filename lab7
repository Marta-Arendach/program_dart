import 'package:flutter/material.dart';

void main() {
  runApp(const LayeredStackExample());
}

class LayeredStackExample extends StatelessWidget {
  const LayeredStackExample({super.key});

  @override
  Widget build(BuildContext context) {
    const double a = 10;  // товщина жовтого шару
    const double b = 25;  // товщина червоного шару
    const double c = 55;  // висота синього блоку

    const double width = 300; // довільна ширина

    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        body: Center(
          child: Stack(
            children: [
              // ЖОВТИЙ
              Container(
                width: width,
                height: a + b + c,
                color: Colors.yellow,
              ),

              // ЧЕРВОНИЙ
              Positioned(
                left: a,
                top: a,
                child: Container(
                  width: width - a,
                  height: b + c,
                  color: Colors.red,
                ),
              ),

              // СИНІЙ
              Positioned(
                left: a + b,
                top: a + b,
                child: Container(
                  width: width - (a + b),
                  height: c,
                  color: Colors.lightBlue,
                  child: const Center(
                    child: Text(
                      'SLAVA UKRAINI',
                      style: TextStyle(
                        fontSize: 18,
                        fontStyle: FontStyle.italic,
                        fontWeight: FontWeight.w600,
                        color: Colors.black,
                      ),
                    ),
                  ),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
